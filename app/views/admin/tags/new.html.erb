<h1>Admin::Tags#new</h1>

<%= form_for [:admin, @tag] do |f| %>
    <p><%= f.text_area :name, placeholder: "e.g. travel, food, programming" %></p>
    <p><%= f.submit %></p>
<% end %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>name</th>
      <th>status</th>
      <th>created</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      <td><%= convert_status(tag.in_use?, truthy: "In Use", falsey: "Not Used") %></td>
      <td><%= time_ago tag.created_at %></td>
      <td>
        <%= link_to edit_admin_tag_path(tag) do %>
          <button type="button">Edit</button>
        <% end %>

        <%= create_deletable_button tag %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>